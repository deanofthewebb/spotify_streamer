<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/artist_result_layout_height"
    android:orientation="horizontal"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="@drawable/touch_selector">


    <ImageView
        android:id="@+id/list_item_artist_art"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxHeight="@dimen/artist_image_dimen"
        android:maxWidth="@dimen/artist_image_dimen"
        android:padding="@dimen/artist_image_padding"/>

    <TextView
        android:id="@+id/list_item_artist_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        />

</LinearLayout>